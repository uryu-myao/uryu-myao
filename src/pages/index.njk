            </div>
        </section>


        <section class="grid__prev">
            {% for prev in prev %}
            <div class="__midbar">
                <figure>
                    <picture class="__{{ prev.class }}"></picture>
                </figure>
            </div>
            <div class="motionBar">
                <div><p></p></div>
            </div>
            {% endfor %}
        </section>


        <section class="grid__next">
            {% for next in next %}
            <div class="motionBar">
                <div><p></p></div>
            </div>
            <div class="__midbar">
                <figure>
                    <picture class="__{{ next.class }}"></picture>
                </figure>
            </div>
            {% endfor %}
        </section>


        <section class="grid__prog">
            <div class="__prog">
                <ol>
                    <li class="__prog-dots __prog-active"></li>
                    <li class="__prog-dots"></li>
