                            {% for level in levelStatus %}
                            <div class="badge__li {{ level.4grid }}">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                            {% endfor %}
                        </li>
                        <li>
                            <p>DEV.</p>
                            <div class="badge__ch __badge-dev"></div>
                            <!-- ** level status ** -->
                            {% for level in levelStatus %}
                            <div class="badge__li">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                            {% endfor %}
                        </li>
                        <li>
                            <p>Direction</p>
                            <div class="badge__ch __badge-direction"></div>
                            <!-- ** level status ** -->
                            {% for level in levelStatus %}
                            <div class="badge__li">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                            {% endfor %}
                        </li>
                    </ol>
                </div>
