{% extends "_layout.njk" %}
{% set pagetitle = "TOP" %}
{% set kw = 'URYU, MYAO, URYU MYAO, ウェブデザイナー, 中国人デザイナー, 网页设计, 网站开发, design, ui, ux, development, web, javascript, js, webgl' %}
{% set des = 'URYU MYAO' %}
<!--  head end  -->

{% block content %}

<!-- ** Preload Page ** -->
{% include "_preload.njk" %}
<!-- * end * -->
<!-- ** Audio Source ** -->
{% include "_audio.njk" %}
<!-- * end * -->
<!-- ** mouse circle ** -->
{% include "_mouse-circle.njk" %}
<!-- * end * -->


<div id="top" data-page="top">
    <!-- ** background ** -->
    {% include "_bg.njk" %}

    <main class="grid__rule __gTop mz" role="main">

        {% include "_cyberline.njk" %}

        <aside class="grid__aside __asideTop">
            <div>
                <div class="menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>

                <div id="logo">
                    <h1>logo</h1>
                </div>

                <figure class="earth"><picture></picture></figure>
                <figure class="mars"><picture></picture></figure>

                <p class="cr">© {{ basic.sitename }} 2018</p>

                {% include "_menu-overlay.njk" %}
            </div>
        </aside>


        <section class="grid__curS">

            {% for current in current %}
            <a href="{{ basic.root }}works/{{ current.link }}.html">
                <figure class="__cur-show">
                    <picture class="__{{ current.class }}"></picture>
                </figure>
            </a>
            {% endfor %}
        </section>


        <section class="grid__curI">

            {% include "_cyberline.njk" %}

            <div class="__curI-ttl">
                {% for desc1 in desc1 %}
                <div>
                    <h2 class="neon" data-text="{{ desc1.name }}">
                    {{ desc1.name }}
                    </h2>
                    <p>
                    {{ desc1.cat }}
                    </p>
                </div>
                {% endfor %}
            </div>
            <div class="__curI-desc">
                {# <div class="chart kl">
                    <canvas id="chart"></canvas>
                </div> #}
                <div class="badges">
                    <ol>
                        <li class="badges-active">
                            <p>Design</p>
                            <div class="badges__ch __badge-design"></div>
                            <!-- ** level status ** -->
                            <div class="badges__li __level-5">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                        </li>
                        <li class="badges-active">
                            <p>DEV.</p>
                            <div class="badges__ch __badge-dev"></div>
                            <!-- ** level status ** -->
                            <div class="badges__li __level-3">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                        </li>
                        <li>
                            <p>Direction</p>
                            <div class="badges__ch __badge-direction"></div>
                            <!-- ** level status ** -->
                            <div class="badges__li">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                        </li>
                    </ol>
                </div>
                <button type="button" class="glitch__btn audio__hv-01">
                    <a role="button">details</a>
                </button>
            </div>
        </section> <!-- grid__curI -->


        <section class="grid__prev">
            {% for prev in prev %}
            <div class="__midbar">
                <figure>
                    <picture class="__{{ prev.class }}"></picture>
                </figure>
            </div>
            <div class="motionBar">
                <div><p></p></div>
            </div>
            {% endfor %}
        </section>


        <section class="grid__next">
            {% for next in next %}
            <div class="motionBar">
                <div><p></p></div>
            </div>
            <div class="__midbar">
                <figure>
                    <picture class="__{{ next.class }}"></picture>
                </figure>
            </div>
            {% endfor %}
        </section>


        <section class="grid__prog">
            <div class="__prog">
                <ol>
                    <li class="__prog-dots __prog-active"></li>
                    <li class="__prog-dots"></li>
                    <li class="__prog-dots"></li>
                </ol>
            </div>
            <div class="BGM">
                <div>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </section>

    </main>
</div> <!-- id.top -->
<!--  * CONTENTS end * -->


{% endblock %}
