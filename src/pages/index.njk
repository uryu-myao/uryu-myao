{% extends "_layout.njk" %}
{% set pagetitle = "TOP" %}
{% set kw = 'URYU, MYAO, URYU MYAO, ウェブデザイナー, 中国人デザイナー, 网页设计, 网站开发, design, ui, ux, development, web, javascript, js, webgl' %}
{% set des = 'URYU MYAO' %}
<!--  head end  -->

{% block content %}

<!-- ** Preload Page ** -->
{% include "_preload.njk" %}
<!-- * end * -->
<!-- ** Audio Source ** -->
{% include "audio.njk" %}
<!-- * end * -->
<!-- ** mouse circle ** -->
{% include "mouse-circle.njk" %}
<!-- * end * -->


<div id="top" data-page="top">
    <!-- ** background ** -->
    {% include "bg.njk" %}

    <main class="grid_rule mz" role="main">

        {% include "cyberline.njk" %}

        <aside class="grid_aside">
            <div>
                {% include "menu.njk" %}

                <div id="logo">
                    <h1>logo</h1>
                </div>

                <figure class="earth"><picture></picture></figure>
                <figure class="mars"><picture></picture></figure>

                <p class="cr">© {{ basic.sitename }} 2018</p>
            </div>
        </aside>

        <section class="grid_curS">

            {% for current in current %}
            <a href="{{ basic.root }}works/{{ current.link }}.html">
                <figure class="grid_curS_view">
                    <picture class="__{{ current.class }}"></picture>
                </figure>
            </a>
            {% endfor %}
        </section>

        <section class="grid_curI">

            {% include "cyberline.njk" %}

            <div class="__curI-ttl">
                {% for desc1 in desc1 %}
                <div>
                    <h2 class="neon" data-text="{{ desc1.name }}">
                    {{ desc1.name }}
                    </h2>
                    <p>
                    {{ desc1.cat }}
                    </p>
                </div>
                {% endfor %}
            </div>
            <div class="__curI-desc">
                <div class="badges">
                    <ol>
                        <li class="badges-active">
                            <p>Design</p>
                            <div class="badges_ch badges-design"></div>
                            <!-- ** level status ** -->
                            <div class="badges_level __level-5">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                        </li>
                        <li class="badges-active">
                            <p>DEV.</p>
                            <div class="badges_ch __badge-dev"></div>
                            <!-- ** level status ** -->
                            <div class="badges_level __level-3">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                        </li>
                        <li>
                            <p>Direction</p>
                            <div class="badges_ch __badge-direction"></div>
                            <!-- ** level status ** -->
                            <div class="badges_level">
                                <span></span><span></span><span></span><span></span><span></span><span></span><span></span>
                            </div>
                        </li>
                    </ol>
                </div>
                <button type="button" class="btn btn_glitch audio_hv_01">
                    <a role="button">details</a>
                </button>
            </div>
        </section> <!-- grid_curI -->

        <section class="grid_prev">
            {% for prev in prev %}
            <div class="banner_middle">
                <figure>
                    <picture class="__{{ prev.class }}"></picture>
                </figure>
            </div>
            <div class="banner_motion">
                <div><p></p></div>
            </div>
            {% endfor %}
        </section>

        <section class="grid_next">
            {% for next in next %}
            <div class="banner_motion">
                <div><p></p></div>
            </div>
            <div class="banner_middle">
                <figure>
                    <picture class="__{{ next.class }}"></picture>
                </figure>
            </div>
            {% endfor %}
        </section>

        <section class="grid_prog">
            <div class="__prog">
                <ol>
                    <li class="__prog-dots __prog-active"></li>
                    <li class="__prog-dots"></li>
                    <li class="__prog-dots"></li>
                </ol>
            </div>
            <div class="BGM">
                <div>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </section>
    </main>
</div> <!-- id.top -->
<!--  * CONTENTS end * -->


{% endblock %}
