<div id="top" data-page="top">

    {% include "_bg.njk" %}

    <main class="grid__rule __gTop" role="main">

        <!-- ** Modulized Cyber-line (absolute) ** -->
        <div class="horizon horizon__top"><div></div></div>
        <div class="horizon horizon__bottom"><div></div></div>
        <!-- * end * -->

        <aside class="grid__aside __asideTop">
            <div>
                <div class="logo">
                    <h1>logo</h1>
                </div>
                <nav class="controller" role="navigation">
                    <a href="/about.html"></a>
                </nav>
                <picture class="moon">
                    <img src="{{ basic.root }}images/top/moon.png" alt="moon" />
                </picture>
                <p class="cr">Â© {{ basic.sitename }} 2018</p>
            </div>
        </aside>


        <section class="grid__curS">

            <!-- ** Modulized Cyber-line (absolute) ** -->
            <div class="horizon horizon__top"><div></div></div>
            <div class="horizon horizon__bottom"><div></div></div>
            <!-- * end * -->

            {% for current in current %}
            <a href="{{ basic.root }}works/{{ current.link }}.html">
                <figure class="__cur-show">
                    <picture class="__{{ current.class }}"></picture>
                </figure>
            </a>
            {% endfor %}
        </section>


        <section class="grid__curI">

            <!-- ** Modulized Cyber-line (absolute) ** -->
            <div class="horizon horizon__top"><div></div></div>
            <div class="horizon horizon__bottom"><div></div></div>
            <!-- * end * -->

            <div class="__curI-ttl">
                {% for desc1 in desc1 %}
                <div>
                    <h2>
                    {{ desc1.name }}
                    </h2>
                    <p>
                    {{ desc1.cat }}
                    </p>
                </div>
                {% endfor %}
            </div>
            <div class="__curI-desc">
                <div class="graph">
                    <canvas id=""></canvas>
                </div>
                <div>
                    <ol class="badges">
                        <li>
                            <p>Design</p>
                            <div class="badge__ch __badge-design"></div>
                            <div class="">

                            </div>
                        </li>
                        <li>
                            <p>DEV.</p>
                            <div class="badge__ch __badge-dev"></div>
                            <div class="">

                            </div>
                        </li>
                        <li>
                            <p>Direction</p>
                            <div class="badge__ch __badge-direction"></div>
                            <div class="">

                            </div>
                        </li>
                    </ol>
                </div>
                {# {% for desc2 in desc2 %} #}
                {# <div>
                    <dl>
                        <dt>client</dt>
                        <dd>{{ desc2.client }}</dd>
                        <dt>{{ desc2.role1 }}</dt>
                        <dd>{{ desc2.item1 }}</dd>
                        <dt>{{ desc2.role2 }}</dt>
                        <dd class="scramble__txt">
                        {{ desc2.item2 }}
                        </dd>
                        <dt>employer</dt>
                        <dd data-employer="EMPLOYER">
                            <a href="https://www.econosys.jp/" class="scramble__txt" target="_blank">
                            {{ desc2.employer }}
                            </a>
                        </dd>
                    </dl>
                </div> #}
                <button type="button" class="glitch__btn">
                    <a href="{{ basic.root }}works/{{ desc2.link }}.html" role="button">details</a>
                </button>
                {# {% endfor %} #}
            </div>
        </section>


        <section class="grid__prev">
            {% for prev in prev %}
            <div class="__midbar">
                <a href="{{ basic.root }}works/{{ prev.link }}.html">
                    <figure>
                        <picture class="__{{ prev.class }}"></picture>
                    </figure>
                </a>
            </div>
            <div class="motionBar">
                <div>
                    <a href="{{ basic.root }}works/{{ prev.link }}.html">
                        <p></p>
                    </a>
                </div>
            </div>
            {% endfor %}
        </section>


        <section class="grid__next">
            {% for next in next %}
            <div class="motionBar">
                <div>
                    <a href="{{ basic.root }}works/{{ next.link }}.html">
                        <p></p>
                    </a>
                </div>
            </div>
            <div class="__midbar">
                <a href="{{ basic.root }}works/{{ next.link }}.html">
                    <figure>
                        <picture class="__{{ next.class }}"></picture>
                    </figure>
                </a>
            </div>
            {% endfor %}
        </section>


        <section class="grid__prog">
            <div>
                <ol>
                    <li class="__prog-dots __prog-active"></li>
                    <li class="__prog-dots"></li>
                    <li class="__prog-dots"></li>
                </ol>
            </div>
        </section>

    </main>
</div>
